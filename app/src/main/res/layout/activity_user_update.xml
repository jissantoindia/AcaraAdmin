<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main"
    android:layout_height="match_parent"
    tools:context=".UserUpdate">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/DisMobileusr"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittxt"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/DisAcridusr"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittxt"
            android:gravity="center"
            android:text="" />

        <EditText
            android:id="@+id/Nameusr"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittxt"
            android:ems="10"
            android:gravity="center"
            android:hint="Name"
            android:inputType="text"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <EditText
            android:id="@+id/Emailusr"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittxt"
            android:ems="10"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/Collegeusr"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittxt"
            android:ems="10"
            android:gravity="center"
            android:hint="College"
            android:inputType="textCapSentences"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/userUpdateBtn"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/btnstyle"
            android:text="Save your Info"
            android:textAllCaps="false"
            android:textColor="#fff" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        app:srcCompat="@drawable/icon" />

    <LinearLayout
        android:id="@+id/progresslay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainlo"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/AVLoadingIndicatorView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:indicatorColor="@color/colorPrimary"
            app:indicatorName="BallGridPulseIndicator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>